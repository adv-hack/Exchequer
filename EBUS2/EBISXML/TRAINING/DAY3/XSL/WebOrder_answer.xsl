<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform"><xsl:template match="*"/><xsl:template match="text() | @*"/><xsl:template match="/"><xsl:apply-templates select="//Order"/></xsl:template><xsl:template match="Order"><table border="1">	<tr>		<td valign="top">			<p><xsl:apply-templates select="Settlement/CardDetails"/></p>		</td>		<td valign="top">			<p><xsl:value-of select="OrderDate"/></p>			<xsl:for-each select="OrderLine/Product/Description">				<div><xsl:value-of select="."/></div>			</xsl:for-each>			<p>Total: Â£<xsl:value-of select="OrderTotal/GrossValue"/></p>		</td>	</tr></table></xsl:template><xsl:template match="CardDetails"><table>	<tr>		<td>Issuer:</td>		<td><xsl:value-of select="Issuer"/></td>	</tr>	<tr>		<td>Card Number:</td>		<td><xsl:value-of select="CardNumber"/></td>	</tr>	<xsl:if test="IssueDate and IssueDate/text()">		<tr>			<td>Issue Date:</td>			<td><xsl:value-of select="IssueDate"/></td>		</tr>	</xsl:if>	<tr>		<td>Expiry Date:</td>		<td><xsl:value-of select="ExpiryDate"/></td>	</tr>	<xsl:if test="IssueNumber and IssueNumber/text()">		<tr>			<td>Issue Number:</td>			<td><xsl:value-of select="IssueNumber"/></td>		</tr>	</xsl:if>	<tr>		<td colspan="2">Signature:<br/><br/><br/><hr/></td>	</tr></table></xsl:template></xsl:stylesheet>