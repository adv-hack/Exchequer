<xsl:stylesheet version="1.0"	xmlns:xsl="http://www.w3.org/1999/XSL/Transform"><xsl:output method="xml" indent="yes" omit-xml-declaration="no" /><xsl:template match="*"><xsl:apply-templates/></xsl:template><xsl:template match="/">	<authors>		<xsl:apply-templates select="//author"/>	</authors></xsl:template><xsl:template match="author">	<author><xsl:value-of select="first_name"/><xsl:text> </xsl:text><xsl:value-of select="last_name"/></author></xsl:template></xsl:stylesheet>